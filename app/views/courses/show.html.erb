 <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-image">
          <div class="wistia_responsive_padding" style="padding:56.25% 0 0 0;position:relative;"><div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;"><iframe src="https://fast.wistia.net/embed/iframe/<%= @course.video %>" title="Borrowed video: Welcome to Wistia!" allowtransparency="true" frameborder="0" scrolling="no" class="wistia_embed" name="wistia_embed" allowfullscreen mozallowfullscreen webkitallowfullscreen oallowfullscreen msallowfullscreen width="100%" height="100%"></iframe></div></div>
<script src="https://fast.wistia.net/assets/external/E-v1.js" async></script>
        </div>
        <div class="card-content white-text">
          <div class="row">
            <div class="col m4 center">
              <%= image_tag "Courses/#{@course.cover}" %>
            </div>
            <div class="col m8">
              <span class="card-title"><%= @course.title %> </span>
              <% (1..@course.star_number).each do %>
                <i class="material-icons">grade</i>
              <% end %>
              <p> <%= @course.description %> </p>  
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>